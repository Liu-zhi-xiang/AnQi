<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    android:background="@mipmap/lts_bg"
    android:keepScreenOn="true"
    tools:context="com.motorbike.anqi.activity.voice.VoiceHomeActivity">
    <LinearLayout
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_height="@dimen/title_height">
        <LinearLayout
            android:layout_width="50dp"
            android:id="@+id/back_layout"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/left_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:background="@mipmap/xzuo" />
        </LinearLayout>

        <TextView
            android:layout_width="0dp"
            android:text="车友圈"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:id="@+id/title_text"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
        <LinearLayout
            android:layout_width="50dp"
            android:id="@+id/add_layout"
            android:layout_height="match_parent"
            android:visibility="visible"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/right_img"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:background="@mipmap/lts_more" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        app:layout_constraintTop_toBottomOf="@+id/title_layout"
        android:layout_marginTop="30dp"
        android:paddingTop="40dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:paddingLeft="14dp"
        android:paddingRight="14dp"
        android:id="@+id/address_layout"
        android:background="@drawable/heise_bg_yuan"
        android:layout_height="190dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="房"
                    android:textColor="#bbbbbb"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="间"
                    android:textColor="#bbbbbb"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="号:"
                    android:layout_weight="1"
                    android:textColor="#bbbbbb"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="集"
                        android:textColor="#bbbbbb"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="结"
                        android:textColor="#bbbbbb"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="地:"
                        android:layout_weight="1"
                        android:textColor="#bbbbbb"
                        android:textSize="14sp" />
                </LinearLayout>

            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_height="30dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="集结时间:"
                android:textColor="#bbbbbb"
                android:textSize="14sp"
                />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_height="30dp">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="备"
                        android:textColor="#bbbbbb"
                        android:textSize="14sp"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="注:"
                        android:textColor="#bbbbbb"
                        android:textSize="14sp"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>

            </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:id="@+id/xia0_layout"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_homehao"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:text="---"
                android:lines="1"
                android:ellipsize="end"
                android:textColor="#bbbbbb"
                android:textSize="14sp"
                />
            <TextView
                android:id="@+id/tvStartPoint"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:text="---"
                android:lines="1"
                android:ellipsize="end"
                android:textColor="#bbbbbb"
                android:textSize="14sp"
                />
            <TextView
                android:id="@+id/tvTime"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:text="---"
                android:lines="1"
                android:ellipsize="end"
                android:textColor="#bbbbbb"
                android:textSize="14sp"
                />
            <TextView
                android:id="@+id/tvRemark"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:text="---"
                android:lines="1"
                android:ellipsize="end"
                android:textColor="#bbbbbb"
                android:textSize="14sp"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        app:layout_constraintLeft_toLeftOf="@+id/address_layout"
        android:layout_marginLeft="14dp"
        app:layout_constraintTop_toBottomOf="@+id/title_layout"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="14dp"
        android:gravity="center_vertical"
        android:layout_height="wrap_content">
        <com.motorbike.anqi.view.CircleImageView
            android:layout_width="60dp"
            app:civ_border_color="#00000000"
            app:civ_border_width="0dp"
            android:id="@+id/headImage"
            android:background="@mipmap/lts_img"
            android:layout_height="60dp" />
        <TextView
            android:id="@+id/tvNickname"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#ffffffff"
            android:textSize="16sp"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/xian_layout"
        android:orientation="horizontal"
        android:layout_width="0dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@mipmap/lts_xian"
        android:gravity="center"
        android:layout_marginTop="160dp"
        app:layout_constraintTop_toTopOf="@+id/address_layout"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/moshi_text"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:background="@mipmap/lts_zm"
            android:text="主麦模式"
            android:gravity="center"
            android:textColor="#ff1a1a1a"
            android:textSize="14sp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="12dp"
        android:layout_width="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/xian_layout"
        android:background="@drawable/heise_bg_yuan"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:background="@mipmap/fenlei"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:text="成员"
                android:textColor="@color/white"
                android:textSize="17sp"
                />
            <LinearLayout
                android:id="@+id/gengduo_layout"
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="更多"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    />
                <ImageView
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="wrap_content"
                    android:background="@mipmap/xyou"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:background="@color/bk_an_px"
            android:layout_height="1px"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:paddingTop="14dp"
            android:paddingBottom="14dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/llFriendOne"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:visibility="invisible"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content">
                <com.motorbike.anqi.view.CircleImageView
                    android:layout_width="45dp"
                    app:civ_border_color="#00000000"
                    app:civ_border_width="0dp"
                    android:id="@+id/imgOne"
                    android:background="@mipmap/lts_img"
                    android:layout_height="45dp" />
                <TextView
                    android:id="@+id/tvNameOne"
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="小饼干"
                    android:textColor="#ffbbbbbb"
                    android:textSize="12sp"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/llFriendTwo"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:visibility="invisible"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content">
                <com.motorbike.anqi.view.CircleImageView
                    android:layout_width="45dp"
                    app:civ_border_color="#00000000"
                    app:civ_border_width="0dp"
                    android:id="@+id/imgTwo"
                    android:background="@mipmap/lts_img"
                    android:layout_height="45dp" />
                <TextView
                    android:id="@+id/tvNameTwo"
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="小饼干"
                    android:textColor="#ffbbbbbb"
                    android:textSize="12sp"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/llFriendThree"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:visibility="invisible"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content">
                <com.motorbike.anqi.view.CircleImageView
                    android:layout_width="45dp"
                    app:civ_border_color="#00000000"
                    app:civ_border_width="0dp"
                    android:id="@+id/imgThree"
                    android:background="@mipmap/lts_img"
                    android:layout_height="45dp" />
                <TextView
                    android:id="@+id/tvNameThree"
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="小饼干"
                    android:textColor="#ffbbbbbb"
                    android:textSize="12sp"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/llFriendFour"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:visibility="invisible"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content">
                <com.motorbike.anqi.view.CircleImageView
                    android:layout_width="45dp"
                    app:civ_border_color="#00000000"
                    app:civ_border_width="0dp"
                    android:id="@+id/imgFour"
                    android:background="@mipmap/lts_img"
                    android:layout_height="45dp" />
                <TextView
                    android:id="@+id/tvNameFour"
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="小饼干"
                    android:textColor="#ffbbbbbb"
                    android:textSize="12sp"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/llFriendFive"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:visibility="invisible"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content">
                <com.motorbike.anqi.view.CircleImageView
                    android:layout_width="45dp"
                    app:civ_border_color="#00000000"
                    app:civ_border_width="0dp"
                    android:id="@+id/imgFive"
                    android:background="@mipmap/lts_img"
                    android:layout_height="45dp" />
                <TextView
                    android:id="@+id/tvNameFive"
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="小饼干"
                    android:textColor="#ffbbbbbb"
                    android:textSize="12sp"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:id="@+id/Guideline1"
        app:layout_editor_absoluteX="0dp"
        app:layout_editor_absoluteY="10dp"
        app:layout_constraintGuide_end="20dp"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/micro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@mipmap/lts_ej"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="@dimen/dp_50"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/voice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="@dimen/dp_50"
        android:background="@mipmap/lts_gy"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="MissingConstraints" />

</android.support.constraint.ConstraintLayout>
