<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_route_planning"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    android:orientation="vertical"
    android:background="@color/title_color"
    tools:context="com.motorbike.anqi.activity.voice.RoutePlanningActivity">
    <include layout="@layout/titile_ytu_layout"/>
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:paddingTop="12dp"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/dingwei_ll"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:paddingTop="@dimen/item_vertical_panding"
                android:paddingBottom="@dimen/item_vertical_panding"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:background="@drawable/baise_bg_yuan"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_marginLeft="1dp"
                    android:layout_width="wrap_content"
                    android:background="@mipmap/fenlei"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="自动定位"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:background="@mipmap/szlx_dw"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/dingwei_city_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="上海"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="15dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:visibility="gone"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:paddingTop="10dp"
                android:id="@+id/room_layout"
                android:paddingBottom="10dp"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:background="@drawable/baise_bg_yuan"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_marginLeft="1dp"
                    android:layout_width="wrap_content"
                    android:background="@mipmap/fenlei"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="房间主题"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:layout_height="wrap_content" />
                <EditText
                    android:id="@+id/roomname_tv"
                    android:layout_width="200dp"
                    android:paddingHorizontal="6dp"
                    android:paddingVertical="10dp"
                    android:layout_height="wrap_content"
                    android:text="上海"
                    android:gravity="right"
                    android:background="@null"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:maxLines="1"
                    android:maxLength="20"
                    android:singleLine="true"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="15dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="17dp"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:background="@drawable/baise_bg_yuan"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:paddingTop="14dp"
                    android:paddingBottom="14dp"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_marginLeft="1dp"
                        android:layout_width="wrap_content"
                        android:background="@mipmap/fenlei"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="修改时间地点"
                        android:textColor="@color/white"
                        android:textSize="17sp"
                        />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/bk_an_px"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/item_vertical_panding"
                    android:id="@+id/cfd_ll"
                    android:paddingBottom="@dimen/item_vertical_panding"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="出  发  地 *"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        />

                    <TextView
                        android:id="@+id/chufa_et"
                        android:background="@null"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="填写出发地"
                        android:lines="1"
                        android:maxLength="20"
                        android:ellipsize="end"
                        android:textColor="@color/an_bg_hui_text"
                        android:textSize="15sp"
                        android:layout_marginLeft="15dp"
                        />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/bk_an_px"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/item_vertical_panding"
                    android:paddingBottom="@dimen/item_vertical_panding"
                    android:id="@+id/mdd_ll"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="目  的  地 *"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        />

                    <TextView
                        android:id="@+id/mudi_et"
                        android:background="@null"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="填写目的地"
                        android:lines="1"
                        android:maxLength="20"
                        android:ellipsize="end"
                        android:textColor="@color/an_bg_hui_text"
                        android:textSize="15sp"
                        android:layout_marginLeft="15dp"
                        />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/bk_an_px"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/item_vertical_panding"
                    android:paddingBottom="@dimen/item_vertical_panding"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="集合时间 *"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        />

                    <TextView
                        android:id="@+id/time_tv"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:clickable="true"
                        android:text="2017/05/01 10:30"
                        android:lines="1"
                        android:ellipsize="end"
                        android:textColor="@color/an_bg_hui_text"
                        android:textSize="15sp"
                        android:layout_marginLeft="10dp"
                        />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/bk_an_px"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/item_vertical_panding"
                    android:paddingBottom="@dimen/item_vertical_panding"
                    android:id="@+id/jihe_layout"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="集合地点 *"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        />

                    <TextView
                        android:id="@+id/jihe_et"
                        android:background="@null"
                        android:layout_marginLeft="10dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="地图选点"
                        android:maxLength="20"
                        android:lines="1"
                        android:ellipsize="end"
                        android:textColor="@color/text_cocle"
                        android:textSize="15sp"
                        />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/bk_an_px"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/item_vertical_panding"
                    android:paddingBottom="@dimen/item_vertical_panding"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="竞速备注 *"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        />

                    <TextView
                        android:id="@+id/beizhu_tv"
                        android:layout_marginLeft="10dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text=""
                        android:clickable="true"
                        android:lines="1"
                        android:ellipsize="end"
                        android:textColor="@color/text_cocle"
                        android:textSize="15sp"
                        />
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/queding_layout"
                android:layout_marginTop="90dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:background="@mipmap/xc_bt"
                android:gravity="center"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="确定"
                    android:textColor="@color/base_bg_yuan"
                    android:textSize="17sp"
                    />
            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</LinearLayout>
