<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="245dp"
    android:background="@color/background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/baise_bg_yuan"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TOP50"
                android:textColor="@color/white"
                android:textSize="@dimen/size_seventeen"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="48dp"
                android:layout_weight="1">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginLeft="20dp"
                    android:orientation="vertical">
                    <com.motorbike.anqi.view.CircleImageView
                        android:id="@+id/headImageTwo"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:background="@mipmap/image"/>
                    <com.motorbike.anqi.view.CircleImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_marginTop="-10dp"
                        android:background="@mipmap/top_2"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:layout_marginLeft="18dp"
                    android:background="@mipmap/left"
                    android:gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tvTwoTrip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="7998.5"
                        android:textColor="@color/white"
                        android:textSize="@dimen/size_seventeen"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="km"
                        android:textColor="@color/white"
                        android:textSize="@dimen/size_twelve"
                        />
                </LinearLayout>


            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="31dp"
                android:layout_weight="1">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">
                    <com.motorbike.anqi.view.CircleImageView
                        android:id="@+id/headImageOne"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:background="@mipmap/image"/>
                    <com.motorbike.anqi.view.CircleImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_marginTop="-10dp"
                        android:background="@mipmap/top_1"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:background="@mipmap/middle"
                    android:gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tvName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="霸道总裁"
                        android:textColor="@color/white"
                        android:textSize="@dimen/size_fourteen"
                        />
                    <TextView
                        android:id="@+id/tvOneTrip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="7998.5"
                        android:textColor="@color/white"
                        android:textSize="@dimen/size_seventeen"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="km"
                        android:textColor="@color/white"
                        android:textSize="@dimen/size_twelve"
                        />
                </LinearLayout>


            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="60dp"
                android:layout_weight="1">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginRight="20dp"
                    android:orientation="vertical">
                    <com.motorbike.anqi.view.CircleImageView
                        android:id="@+id/headImageThree"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:background="@mipmap/image"/>
                    <com.motorbike.anqi.view.CircleImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_marginTop="-10dp"
                        android:background="@mipmap/top_3"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="35dp"
                    android:background="@mipmap/right"
                    android:gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tvThreeTrip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="7998.5"
                        android:textColor="@color/white"
                        android:textSize="@dimen/size_seventeen"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="km"
                        android:textColor="@color/white"
                        android:textSize="@dimen/size_twelve"
                        />
                </LinearLayout>

                <ImageView
                    android:layout_width="105dp"
                    android:layout_height="54dp"
                    android:layout_marginTop="40dp"

                    android:id="@+id/imageView" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
