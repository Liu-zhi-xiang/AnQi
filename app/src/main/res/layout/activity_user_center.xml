<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_user_center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/llBack"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_size"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="@dimen/title_size"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/back" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="个人中心"
                android:textSize="@dimen/size_seventeen"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llSet"
            android:layout_width="@dimen/title_size"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/set" />
        </LinearLayout>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="194dp"
                android:layout_marginLeft="@dimen/left_right_size"
                android:layout_marginRight="@dimen/left_right_size"
                android:layout_marginTop="12dp"
                android:background="@drawable/baise_bg_yuan"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="21dp"
                        android:layout_marginTop="@dimen/left_right_size"
                        android:orientation="vertical">

                        <com.motorbike.anqi.view.CircleImageView
                            android:id="@+id/head"
                            android:layout_width="@dimen/image_big_size"
                            android:layout_height="@dimen/image_big_size"
                             />

                        <com.motorbike.anqi.view.CircleImageView
                            android:id="@+id/renZheng"
                            android:layout_width="17dp"
                            android:layout_height="17dp"
                            android:layout_marginLeft="42dp"
                            android:layout_marginTop="-17dp"
                            android:background="@mipmap/renzheng" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="21dp"
                        android:layout_marginRight="@dimen/left_right_size"
                        android:layout_marginTop="@dimen/left_right_size"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tvName"
                                android:layout_width="95dp"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:layout_marginTop="2dp"
                                android:textColor="@color/white"
                                android:textSize="@dimen/size_sixteen" />

                            <TextView
                                android:id="@+id/tvClassDetail"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:background="@mipmap/dengji_bg"
                                android:gravity="center"
                                android:text=""
                                android:textStyle="bold"
                                android:typeface="sans" />

                            <LinearLayout
                                android:id="@+id/llRenZheng"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="2dp"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="认证中心"
                                    android:textColor="#B4E317"
                                    android:textSize="@dimen/size_twelve" />

                                <ImageView
                                    android:layout_width="@dimen/left_right_size"
                                    android:layout_height="@dimen/left_right_size"
                                    android:layout_marginLeft="2dp"
                                    android:background="@mipmap/wei_rg" />
                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/tvAddress"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:text=""
                                android:textColor="@color/white"
                                android:layout_weight="1"
                                android:textSize="@dimen/size_fourteen" />

                            <TextView
                                android:id="@+id/tvId"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:text=""
                                android:textColor="@color/white"
                                android:textSize="@dimen/size_fourteen" />
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="车型:"
                                android:textColor="@color/white"
                                android:textSize="@dimen/size_fourteen" />

                            <TextView
                                android:id="@+id/tvType"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text=""
                                android:textColor="@color/white"
                                android:textSize="@dimen/size_fourteen" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginTop="20dp"
                    android:background="#313131" />
                <LinearLayout
                    android:id="@+id/llKm"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">
                        <TextView
                            android:id="@+id/tvKm"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0.00"
                            android:textSize="@dimen/size_seventeen"
                            android:textColor="@color/white"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="总里程(km)"
                            android:textSize="@dimen/size_twelve"
                            android:layout_marginTop="3dp"
                            android:textColor="#999999"/>
                    </LinearLayout>
                    <TextView
                        android:layout_width="1px"
                        android:layout_height="match_parent"
                        android:background="#313131"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"/>
                    <LinearLayout
                        android:id="@+id/llJiFen"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">
                        <TextView
                            android:id="@+id/tvJiFen"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5000"
                            android:textSize="@dimen/size_seventeen"
                            android:textColor="@color/white"/>

                        <TextView
                            android:layout_marginTop="3dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="积分"
                            android:textSize="@dimen/size_twelve"
                            android:textColor="#999999"
                            />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/left_right_size"
                android:layout_marginRight="@dimen/left_right_size"
                android:layout_marginTop="@dimen/left_right_size"
                android:orientation="vertical"
                android:layout_marginBottom="30dp"
                android:background="@drawable/baise_bg_yuan">
                <LinearLayout
                    android:id="@+id/llXingCheng"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/userCenter_size"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/xingcheng"
                        android:layout_marginLeft="15dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="行程记录"
                        android:textColor="@color/white"
                        android:layout_marginLeft="15dp"
                        android:layout_weight="1"
                        android:textSize="@dimen/size_sixteen"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:background="@mipmap/you"/>
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/line"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"/>
                <LinearLayout
                    android:id="@+id/llGoodFriend"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/userCenter_size"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/haoyou"
                        android:layout_marginLeft="15dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="好友列表"
                        android:textColor="@color/white"
                        android:layout_marginLeft="15dp"
                        android:layout_weight="1"
                        android:textSize="@dimen/size_sixteen"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:background="@mipmap/you"/>
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/line"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"/>
                <LinearLayout
                    android:id="@+id/llJiFenShangCheng"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/userCenter_size"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/jifen"
                        android:layout_marginLeft="15dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="积分商城"
                        android:textColor="@color/white"
                        android:layout_marginLeft="15dp"
                        android:layout_weight="1"
                        android:textSize="@dimen/size_sixteen"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:background="@mipmap/you"/>
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/line"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"/>
                <LinearLayout
                    android:id="@+id/llDongTai"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/userCenter_size"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/dongtai"
                        android:layout_marginLeft="15dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="动态"
                        android:textColor="@color/white"
                        android:layout_weight="1"
                        android:layout_marginLeft="15dp"
                        android:textSize="@dimen/size_sixteen"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:background="@mipmap/you"/>
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/line"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"/>
                <LinearLayout
                    android:id="@+id/llTuiJian"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/userCenter_size"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/tuijianyoujiang"
                        android:layout_marginLeft="15dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="推荐有奖"
                        android:layout_weight="1"
                        android:textColor="@color/white"
                        android:layout_marginLeft="15dp"
                        android:textSize="@dimen/size_sixteen"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:background="@mipmap/you"/>
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/line"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"/>
                <LinearLayout
                    android:id="@+id/llMessage"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/userCenter_size"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/xinxi"
                        android:layout_marginLeft="15dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="消息中心"
                        android:layout_weight="1"
                        android:textColor="@color/white"
                        android:layout_marginLeft="15dp"
                        android:textSize="@dimen/size_sixteen"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:background="@mipmap/you"/>
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/line"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"/>
                <LinearLayout
                    android:id="@+id/llMyCollect"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/userCenter_size"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/shoucang"
                        android:layout_marginLeft="15dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="我的收藏"
                        android:layout_weight="1"
                        android:textColor="@color/white"
                        android:layout_marginLeft="15dp"
                        android:textSize="@dimen/size_sixteen"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:background="@mipmap/you"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</LinearLayout>
