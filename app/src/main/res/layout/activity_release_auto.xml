<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_release_auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    android:orientation="vertical"
    android:background="@color/title_color"
    tools:context="com.motorbike.anqi.main.che.ReleaseAutoActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="60dp"
            android:id="@+id/back_layout"
            android:background="@drawable/title_selector_btn_bg"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:text="取消"
                android:textSize="15sp"
                android:textColor="@color/white"/>
        </LinearLayout>

        <TextView
            android:layout_width="0dp"
            android:text="车友圈"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
        <LinearLayout
            android:layout_width="60dp"
            android:id="@+id/add_layout"
            android:layout_height="match_parent"
            android:orientation="horizontal">
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_height="0dp">
        <LinearLayout
            android:layout_marginLeft="14dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="14dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:background="@drawable/an_layout_bg"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <EditText
                android:layout_width="match_parent"
                android:background="@null"
                android:text=""
                android:maxLines="1"
                android:singleLine="true"
                android:hint="自定义标题(不多于15字)"
                android:textSize="16sp"
                android:id="@+id/title_edit"
                android:textColor="@color/HinttextColor"
                android:textColorHint="@color/HinttextColor"
                android:layout_height="46dp" />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/huixian_px"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="210dp">
                <EditText
                    android:id="@+id/tvMeetContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:lineSpacingExtra="4dp"
                    android:paddingTop="2dp"
                    android:maxHeight="200dp"
                    android:includeFontPadding="true"
                    android:hint="请输入会议内容与要求"
                    android:background="@null"
                    android:textColorHint="@color/HinttextColor"
                    android:textColor="@color/HinttextColor"
                    android:textSize="16sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:paddingBottom="14dp"
                android:paddingRight="12dp"
                android:paddingTop="8dp"
                android:minHeight="95dp"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <com.motorbike.anqi.view.MyGridView
                    android:id="@+id/noScrollgridview"
                    android:layout_width="190dp"
                    android:layout_height="wrap_content"
                    android:horizontalSpacing="3dp"
                    android:background="@android:color/transparent"
                    android:listSelector="#00000000"
                    android:numColumns="3"
                    android:scrollbars="none"
                    android:verticalSpacing="3dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:gravity="right"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:background="@mipmap/fb_weizhi"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_marginLeft="4dp"
                        android:layout_width="wrap_content"
                        android:text="上海市"
                        android:textSize="13sp"
                        android:textColor="#BBBBBB"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        </LinearLayout>
    <TextView
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="发布"
        android:gravity="center"
        android:id="@+id/ok_but"
        android:textSize="17sp"
        android:clickable="true"
        android:textColor="#1A1A1A"
        android:background="#ffb4e317"/>
</LinearLayout>
