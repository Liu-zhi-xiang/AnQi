<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_auto_moments"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    android:orientation="vertical"
    android:background="@color/title_color"
    tools:context="com.motorbike.anqi.main.AutoMomentsActivity">
    <include layout="@layout/titile_ytu_layout"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="right"
            android:layout_height="wrap_content">
        <LinearLayout
            android:layout_alignParentRight="true"
            android:id="@+id/gengduo_layout"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="全国"
                android:id="@+id/city_tv"
                android:textColor="@color/white"
                android:textSize="13sp"
                />
            <ImageView
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:background="@mipmap/xyou"
                android:layout_height="wrap_content" />
        </LinearLayout>
        </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:background="#5b5858"
        android:layout_height="1px" />
    <com.motorbike.anqi.xrecyclerview.XRecyclerView
        android:layout_width="match_parent"
        android:background="@android:color/transparent"
        android:id="@+id/auto_xrecyclerview"
        android:layout_height="match_parent"/>
</LinearLayout>
