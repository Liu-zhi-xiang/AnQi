<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#242424"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    android:id="@+id/mipam_ingg"
    tools:context="com.motorbike.anqi.activity.map.VoiceMapRoomActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="230dp">

            <ImageView
                android:layout_width="match_parent"
                android:id="@+id/back_img"
                android:scaleType="centerCrop"
                android:layout_height="200dp"
                android:background="@mipmap/bg_aaaa" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/title_height"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/back_layout"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/left_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        android:background="@mipmap/xzuo" />
                </LinearLayout>

                <TextView
                    android:id="@+id/title_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="房间详情"
                    android:textColor="@color/white"
                    android:textSize="17sp" />

                <LinearLayout
                    android:id="@+id/add_layout"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <ImageView
                        android:id="@+id/right_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:layout_marginLeft="12dp"
                        android:background="@mipmap/lts_more"
                        android:visibility="gone" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/room_name_tv"
                android:layout_width="wrap_content"
                android:text=""
                android:textSize="18sp"
                android:layout_centerInParent="true"
                android:textColor="#ffffff"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"
                android:gravity="center_vertical"
                android:layout_alignParentBottom="true"
                android:layout_height="60dp">
                <com.motorbike.anqi.view.CircleImageView
                    android:layout_width="60dp"
                    app:civ_border_color="#00000000"
                    app:civ_border_width="0dp"
                    android:id="@+id/headImage"
                    android:background="@mipmap/lts_img"
                    android:layout_height="60dp" />
                <TextView
                    android:id="@+id/tvNickname"
                    android:layout_marginLeft="10dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:lines="1"
                    android:ellipsize="end"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#ffffffff"
                    android:textSize="15sp"
                    />
                <TextView
                    android:id="@+id/renshu_tv"
                    android:layout_width="wrap_content"
                    android:text="0/0"
                    android:textSize="13sp"
                    android:paddingBottom="4dp"
                    android:gravity="center"
                    android:textColor="@color/colorAccent"
                    android:background="@mipmap/renshu_gb"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </RelativeLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:paddingLeft="5dp"
            android:paddingBottom="14dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="52dp"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_marginTop="6dp"
                    android:layout_width="wrap_content"
                    android:background="@mipmap/cfd_map"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_marginTop="16dp"
                    android:layout_width="wrap_content"
                    android:background="@mipmap/mdd_map"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_marginTop="16dp"
                    android:layout_width="wrap_content"
                    android:background="@mipmap/jjd_map"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_marginTop="16dp"
                    android:layout_width="wrap_content"
                    android:background="@mipmap/kssj_map"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginTop="4dp"
                    android:textSize="14sp"
                    android:text="出  地  地: "
                    android:textColor="@color/firendsList"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textSize="14sp"
                    android:text="目  的  地: "
                    android:layout_marginTop="16dp"
                    android:textColor="@color/firendsList"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textSize="14sp"
                    android:text="集  结  地: "
                    android:layout_marginTop="16dp"
                    android:textColor="@color/firendsList"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textSize="14sp"
                    android:text="开始时间: "
                    android:layout_marginTop="16dp"
                    android:textColor="@color/firendsList"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/cfd_tv"
                    android:textSize="14sp"
                    android:text="--"
                    android:layout_marginTop="4dp"
                    android:lines="1"
                    android:ellipsize="end"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/mdd_tv"
                    android:textSize="14sp"
                    android:text="--"
                    android:layout_marginTop="16dp"
                    android:lines="1"
                    android:ellipsize="end"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/jjd_tv"
                    android:textSize="14sp"
                    android:text="--"
                    android:layout_marginTop="16dp"
                    android:lines="1"
                    android:ellipsize="end"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/kssj_tv"
                    android:textSize="14sp"
                    android:text="--"
                    android:layout_marginTop="16dp"
                    android:lines="1"
                    android:ellipsize="end"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
        <com.baidu.mapapi.map.TextureMapView
            android:id="@+id/map_view"
            android:layout_width="match_parent"
            android:layout_height="400dp">

        </com.baidu.mapapi.map.TextureMapView>
        <LinearLayout
            android:layout_width="match_parent"
            android:paddingTop="12dp"
            android:paddingLeft="14dp"
            android:paddingRight="14dp"
            android:orientation="vertical"
            android:paddingBottom="12dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/gl_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="全程**公里"
                android:textColor="#b4e317"
                android:textSize="16sp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="14sp"
                    android:text="竞速备注:"
                    android:textColor="@color/firendsList"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginLeft="10dp"
                    android:textSize="14sp"
                    android:id="@+id/jsbz_tv"
                    android:text="--------------------"
                    android:ellipsize="end"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
