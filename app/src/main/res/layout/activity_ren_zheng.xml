<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_ren_zheng"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    android:background="@color/background"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_size"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/llCancel"
            android:layout_width="@dimen/title_size"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/back" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="认证中心"
                android:textSize="@dimen/sp_17"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/title_size"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/set"
                android:visibility="gone"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llResult"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">
        
        <ImageView
            android:id="@+id/ivImage"
            android:layout_width="138dp"
            android:layout_height="106dp"
            android:layout_marginLeft="118.5dp"
            android:layout_marginRight="118.5dp"
            android:layout_marginTop="117dp"
            android:background="@mipmap/fail"/>

        <TextView
            android:id="@+id/tvConfirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="认证失败"
            android:textSize="@dimen/size_sixteen"
            android:textColor="@color/white"
            android:layout_marginLeft="156.5dp"
            android:layout_marginTop="20dp"/>


        <TextView
            android:id="@+id/tvDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/size_twelve"
            android:text="确保输入的蓝牙序列号是正确的"
            android:textColor="#B4E317"
            android:layout_marginLeft="98dp"
            android:layout_marginTop="15dp"/>
        <TextView
            android:id="@+id/tvAgain"
            android:layout_width="150dp"
            android:layout_height="55dp"
            android:text="重新验证"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:layout_marginLeft="112.5dp"
            android:textColor="#B4E317"
            android:background="@mipmap/but_bg"
            android:textSize="@dimen/size_sixteen"/>
        
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/llRenZheng"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">
        

        <EditText
            android:id="@+id/etNum"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/renzheng_bg_yuan"
            android:hint="请输入蓝牙耳机序列号"
            />
        
        
        <TextView
            android:id="@+id/tvRenZheng"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="60dp"
            android:text="开始认证"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:layout_marginRight="60dp"
            android:background="@mipmap/yys_bt"/>
    </LinearLayout>
</LinearLayout>
