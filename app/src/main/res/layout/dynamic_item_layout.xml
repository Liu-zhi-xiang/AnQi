<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/llTitle"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:gravity="center_vertical"
        android:layout_height="70dp">
        <com.motorbike.anqi.view.CircleImageView
            android:layout_width="60dp"
            android:id="@+id/headImg"

            android:layout_height="60dp" />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="bottom"
            android:orientation="vertical"
            android:paddingBottom="4dp"
            android:layout_marginLeft="5dp"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tvNickname"
                android:layout_width="wrap_content"
                android:text=""
                android:lines="1"
                android:maxLength="12"
                android:ellipsize="end"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tvAddress"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:text=""
                android:lines="1"
                android:maxLength="12"
                android:ellipsize="end"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <TextView
            android:id="@+id/tvTime"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:text=""
            android:lines="1"
            android:maxLength="12"
            android:ellipsize="end"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
        android:id="@+id/tvTheme"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:text=""
        android:textSize="16sp"
        android:textColor="@color/white"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:id="@+id/llPicture"
        android:layout_width="match_parent"
        android:paddingBottom="10dp"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/ivBackground"
            android:layout_width="match_parent"
            android:maxHeight="200dp"

            android:layout_height="200dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@drawable/banyuan_bg_yuan"
        android:layout_alignParentBottom="true"
        android:layout_height="50dp">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="wrap_content"
                android:background="@mipmap/dt_ping"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tvPinLun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_marginLeft="5dp"
                android:textColor="@color/white"
                android:textSize="@dimen/size_seventeen"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="wrap_content"
                android:background="@mipmap/dt_zan"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tvZan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="17sp"
                />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
