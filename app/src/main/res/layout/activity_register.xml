<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/title_color"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    tools:context="com.motorbike.anqi.activity.loin.RegisterActivity">
    <LinearLayout
        android:background="@color/title_color_an"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="50dp"
            android:id="@+id/back_layout"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/left_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:background="@mipmap/xzuo" />
        </LinearLayout>

        <TextView
            android:layout_width="0dp"
            android:text="车友圈"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:id="@+id/title_text"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
        <LinearLayout
            android:layout_width="50dp"
            android:id="@+id/add_layout"
            android:background="@drawable/title_selector_btn_bg"
            android:layout_height="match_parent"
            android:visibility="invisible"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/right_img"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:background="@mipmap/jia" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:background="@drawable/baise_bg_yuan"
        android:layout_height="wrap_content">
          <LinearLayout
              android:layout_width="match_parent"
              android:orientation="horizontal"
              android:gravity="center_vertical"
              android:paddingLeft="@dimen/input_title_paddingleft"
              android:paddingRight="@dimen/input_title_paddingRight"
              android:layout_height="@dimen/input_title_height">
              <LinearLayout
                  android:layout_width="@dimen/input_title_img_width"
                  android:orientation="horizontal"
                  android:gravity="center"
                  android:layout_height="match_parent">
              <ImageView
                  android:layout_width="wrap_content"
                  android:background="@mipmap/sj"
                  android:layout_height="wrap_content" />
              </LinearLayout>
              <EditText
                  android:id="@+id/phone_et"
                  android:layout_width="0dp"
                  android:layout_weight="1"
                  android:background="@null"
                  android:paddingLeft="@dimen/input_title_EditText_padding_horizontal"
                  android:paddingRight="@dimen/input_title_EditText_padding_horizontal"
                  android:layout_marginLeft="@dimen/input_title_EditText_padding_horizontal"
                  android:layout_height="wrap_content"
                  android:lines="1"
                  android:maxLength="11"
                  android:inputType="phone"
                  android:hint="请输入手机号"
                  android:textSize="@dimen/input_title_EditText_size"
                  android:textColor="@color/white"
                  android:textColorHint="@color/an_bg_hui_text"
                  />
          </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/bk_an_px"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/input_title_paddingleft"
            android:paddingRight="@dimen/input_title_paddingRight"
            android:layout_height="@dimen/input_title_height">
            <LinearLayout
                android:layout_width="@dimen/input_title_img_width"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_height="match_parent">
            <ImageView
                android:layout_width="wrap_content"
                android:background="@mipmap/yzm"
                android:layout_height="wrap_content" />
                </LinearLayout>
            <EditText
                android:id="@+id/code_et"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@null"
                android:paddingLeft="@dimen/input_title_EditText_padding_horizontal"
                android:paddingRight="@dimen/input_title_EditText_padding_horizontal"
                android:layout_marginLeft="@dimen/input_title_EditText_padding_horizontal"
                android:layout_height="wrap_content"
                android:lines="1"
                android:maxLength="6"
                android:inputType="number"
                android:hint="请输入验证码"
                android:textSize="@dimen/input_title_EditText_size"
                android:textColor="@color/white"
                android:textColorHint="@color/an_bg_hui_text"
                />

            <TextView
                android:id="@+id/getcode_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="获取验证码"
                android:clickable="true"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical"
                android:textColor="@color/text_cocle"
                android:textSize="@dimen/input_title_EditText_size"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/bk_an_px"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/input_title_paddingleft"
            android:paddingRight="@dimen/input_title_paddingRight"
            android:layout_height="@dimen/input_title_height">
            <LinearLayout
                android:layout_width="@dimen/input_title_img_width"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="wrap_content"
                    android:background="@mipmap/suo"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <EditText
                android:id="@+id/passone_et"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@null"
                android:paddingLeft="@dimen/input_title_EditText_padding_horizontal"
                android:paddingRight="@dimen/input_title_EditText_padding_horizontal"
                android:layout_marginLeft="@dimen/input_title_EditText_padding_horizontal"
                android:layout_height="wrap_content"
                android:lines="1"
                android:maxLength="18"
                android:inputType="textPassword"
                android:hint="请输入登录密码"
                android:textSize="@dimen/input_title_EditText_size"
                android:textColor="@color/white"
                android:textColorHint="@color/an_bg_hui_text"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/bk_an_px"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/input_title_paddingleft"
            android:paddingRight="@dimen/input_title_paddingRight"
            android:layout_height="@dimen/input_title_height">
            <LinearLayout
                android:layout_width="@dimen/input_title_img_width"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="wrap_content"
                    android:background="@mipmap/suo"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <EditText
                android:id="@+id/passtwo_et"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@null"
                android:paddingLeft="@dimen/input_title_EditText_padding_horizontal"
                android:paddingRight="@dimen/input_title_EditText_padding_horizontal"
                android:layout_marginLeft="@dimen/input_title_EditText_padding_horizontal"
                android:layout_height="wrap_content"
                android:lines="1"
                android:maxLength="18"
                android:inputType="textPassword"
                android:hint="请确认登录密码"
                android:textSize="@dimen/input_title_EditText_size"
                android:textColor="@color/white"
                android:textColorHint="@color/an_bg_hui_text"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/bk_an_px" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="选填"
            android:textSize="@dimen/size_sixteen"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/text_cocle"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/input_title_paddingleft"
            android:paddingRight="@dimen/input_title_paddingRight"
            android:layout_height="@dimen/input_title_height">
            <LinearLayout
                android:layout_width="@dimen/input_title_img_width"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_height="match_parent">
            <ImageView
                android:layout_width="wrap_content"
                android:background="@mipmap/ej"
                android:layout_height="wrap_content" />
                </LinearLayout>
            <EditText
                android:id="@+id/erji_et"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@null"
                android:paddingLeft="@dimen/input_title_EditText_padding_horizontal"
                android:paddingRight="@dimen/input_title_EditText_padding_horizontal"
                android:layout_marginLeft="@dimen/input_title_EditText_padding_horizontal"
                android:layout_height="wrap_content"
                android:lines="1"
                android:maxLength="14"
                android:inputType="text"
                android:hint="请输入蓝牙耳机品牌"
                android:textSize="@dimen/input_title_EditText_size"
                android:textColor="@color/white"
                android:textColorHint="@color/an_bg_hui_text"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/bk_an_px"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/input_title_paddingleft"
            android:paddingRight="@dimen/input_title_paddingRight"
            android:layout_height="@dimen/input_title_height">
            <LinearLayout
                android:layout_width="@dimen/input_title_img_width"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_height="match_parent">
            <ImageView
                android:layout_width="wrap_content"
                android:background="@mipmap/ej"
                android:layout_height="wrap_content" />
                </LinearLayout>
            <EditText
                android:id="@+id/erji_type_et"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@null"
                android:paddingLeft="@dimen/input_title_EditText_padding_horizontal"
                android:paddingRight="@dimen/input_title_EditText_padding_horizontal"
                android:layout_marginLeft="@dimen/input_title_EditText_padding_horizontal"
                android:layout_height="wrap_content"
                android:lines="1"
                android:inputType="text"
                android:hint="请输入型号"
                android:textSize="@dimen/input_title_EditText_size"
                android:textColor="@color/white"
                android:textColorHint="@color/an_bg_hui_text"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/bk_an_px"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/input_title_paddingleft"
            android:paddingRight="@dimen/input_title_paddingRight"
            android:layout_height="@dimen/input_title_height">
            <LinearLayout
                android:layout_width="@dimen/input_title_img_width"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="wrap_content"
                    android:background="@mipmap/sj"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <EditText
                android:id="@+id/etInvite"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@null"
                android:paddingLeft="@dimen/input_title_EditText_padding_horizontal"
                android:paddingRight="@dimen/input_title_EditText_padding_horizontal"
                android:layout_marginLeft="@dimen/input_title_EditText_padding_horizontal"
                android:layout_height="wrap_content"
                android:lines="1"
                android:maxLength="11"
                android:inputType="phone"
                android:hint="请输入邀请码"
                android:textSize="@dimen/input_title_EditText_size"
                android:textColor="@color/white"
                android:textColorHint="@color/an_bg_hui_text"
                />
        </LinearLayout>
        
    </LinearLayout>
    <LinearLayout
        android:id="@+id/zhuce_ll"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@mipmap/bt"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注册"
            android:textColor="#ff1a1a1a"
            android:textSize="17sp"
            />
    </LinearLayout>
</LinearLayout>
