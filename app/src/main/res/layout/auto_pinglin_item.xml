<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/pl_item_ll"
    android:layout_width="match_parent"
    android:background="@color/base_bg_yuan"
    android:layout_height="wrap_content">
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:id="@+id/view"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="#313131"
        />
    <LinearLayout
        android:paddingTop="10dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingBottom="10dp"
        android:layout_height="wrap_content">
    <com.motorbike.anqi.view.CircleImageView
        android:layout_width="40dp"
        android:id="@+id/pl_head_iv"
        android:layout_height="40dp"
        />
    <LinearLayout
        android:layout_marginLeft="12dp"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

        <TextView
            android:id="@+id/pl_name_tv"
            android:textSize="14sp"
            android:text=""
            android:maxLength="10"
            style="@style/name_text" />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/pl_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#ff999999"
            android:textSize="13sp"
            />
        </LinearLayout>
        <TextView
            android:id="@+id/pl_content_tv"
            android:layout_marginTop="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#ffbbbbbb"
            android:textSize="14sp"
            />
    </LinearLayout>

    </LinearLayout>
</LinearLayout>